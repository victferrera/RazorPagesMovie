@page
@model RazorPagesMovie.Pages.HomeModel
@{
    ViewData["Title"] = "Movies";
}

<h1>@ViewData["Title"]</h1>

<p>Use this page to Create, Read, Update and Delete any Movie.</p>

<a class="btn btn-primary" href="Create" role="button">New</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(m => m.Movies[0].ID)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Movies[0].Title)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Movies[0].Genre)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Movies[0].Price)</th>
            <th scope="col">@Html.DisplayNameFor(m => m.Movies[0].ReleaseDate)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var movie in Model.Movies){
            <tr>
                <th scope="row">@movie.ID</th>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Price</td>
                <td>@movie.ReleaseDate</td>
            </tr>
        }
    </tbody>
</table>
