@page
@model RazorPagesMovie.Models.Movie
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<p>Use this page to create a new Movie.</p>

<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" id="movie_Title" placeholder="Enter Movie Title">
    </div>
    <div class="form-group">
        <label asp-for="Genre"></label>
        <input asp-for="Genre" class="form-control" placeholder="Enter Movie Genre">
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" class="form-control" placeholder="Enter Movie Price">
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate"></label>
        <input asp-for="ReleaseDate" class="form-control" placeholder="Enter Movie Release Date">
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




