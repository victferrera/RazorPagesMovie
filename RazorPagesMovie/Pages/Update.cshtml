@page "{handler?}"
@model RazorPagesMovie.Pages.UpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>@ViewData["Title"]</h1>

<p>Use this page to update any Movie.</p>

<form method="post">
    <input type="hidden" asp-for="@Model.Movie.ID"/>
    <div class="form-group">
        <label asp-for="@Model.Movie.Title"></label>
        <input asp-for="@Model.Movie.Title" class="form-control" id="movie_Title" placeholder="Enter Movie Title">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Movie.Genre"></label>
        <input asp-for="@Model.Movie.Genre" class="form-control" placeholder="Enter Movie Genre">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Movie.Price">Price</label>
        <input asp-for="@Model.Movie.Price" class="form-control" placeholder="Enter Movie Price">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Movie.ReleaseDate"></label>
        <input asp-for="@Model.Movie.ReleaseDate" class="form-control" placeholder="Enter Movie Release Date">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
